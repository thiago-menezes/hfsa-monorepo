{
  "name": "@hfsa/design-system",
  "version": "1.0.0",
  "type": "module",
  "description": "HFSA Design System - Reusable React components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist/**/*",
    "styled-system/**/*"
  ],
  "scripts": {
    "build": "panda codegen && tsc --project tsconfig.build.json && npm run build:css",
    "build:css": "postcss src/styles/index.css -o dist/styles.css",
    "prepare": "panda codegen",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "test": "vitest run --config vitest.config.mts",
    "test:ui": "vitest --ui --config vitest.config.mts",
    "test:unit": "vitest run --config vitest.config.mts",
    "test:coverage": "vitest --coverage --config vitest.config.mts",
    "test:coverage:ui": "vitest --coverage --ui --config vitest.config.mts"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "ui",
    "typescript"
  ],
  "author": "HFSA Team",
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@hfsa/eslint-config": "workspace:*",
    "@pandacss/dev": "^1.2.0",
    "@playwright/test": "1.55.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@storybook/test-runner": "^0.23.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^8.6.14",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
