{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["vitest/globals", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "vitest.config.mjs",
    "**/*/.spec.tsx",
    "**/*/.spec.ts",
    "**/*/.integration.spec.tsx",
    "**/*/.integration.spec.ts"
  ],
  "exclude": ["node_modules"]
}
