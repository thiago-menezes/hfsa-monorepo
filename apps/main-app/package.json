{
  "name": "@hfsa/main-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:with-mock": "yarn mock:server & yarn dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --cache --cache-location ./node_modules/.cache/eslint/",
    "lint:fix": "eslint . --fix --cache --cache-location ./node_modules/.cache/eslint/",
    "format": "prettier --write . && yarn lint:fix",
    "test": "vitest run --project unit",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:coverage": "vitest --coverage",
    "test:coverage:ui": "vitest --coverage --ui",
    "pregenerate:openapi": "yarn workspace @hfsa/openapi-ts build",
    "generate:openapi": "yarn workspace @hfsa/openapi-ts generate -- --root ../../apps/main-app",
    "mock:server": "yarn workspace @hfsa/mock-server start:mock:main-app",
    "mock:api": "yarn generate:openapi && yarn mock:server",
    "start:mock": "yarn mock:server",
    "docs:api": "yarn workspace @hfsa/mock-server start:docs:main-app"
  },
  "dependencies": {
    "@hfsa/design-system": "workspace:*",
    "@hfsa/mock-server": "workspace:*",
    "@hookform/resolvers": "^5.2.1",
    "@scalar/nextjs-api-reference": "^0.8.14",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-query-devtools": "^5.85.5",
    "axios": "^1.11.0",
    "clsx": "^2.1.1",
    "next": "^15.5.0",
    "next-auth": "^5.0.0-beta.29",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@hfsa/eslint-config": "workspace:*",
    "@hfsa/openapi-ts": "workspace:*",
    "@stoplight/prism-cli": "^5.14.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.9.2"
}
